            <option value="editor">COM_JVISUALCONTENT_EDITOR</option>
            <option value="image">COM_JVISUALCONTENT_IMAGE</option>
            <option value="calendar">COM_JVISUALCONTENT_CALENDAR</option>
            <!--<option value="file">COM_JVISUALCONTENT_FILE</option>-->
